<view class="page-body">
  <view class="page-section">
    <view class="weui-cells__title">省市区(例如：江苏省徐州市鼓楼区)</view>
    <view class="weui-cells weui-cells_after-title">
      <view class="weui-cell weui-cell_input">
        <input bindblur='getregion' class="weui-input" auto-focus placeholder="请填写省市区"/>
      </view>
    </view>
  </view>

  <view class="page-section">
    <view class="weui-cells__title">详细地址(例如：XX小区6号楼601室)</view>
    <view class="weui-cells weui-cells_after-title">
      <view class="weui-cell weui-cell_input">
        <input bindblur='getaddr' class="weui-input" auto-focus placeholder="请填写详细地址"/>
      </view>
    </view>
  </view>

  <view class="page-section">
    <view class="weui-cells__title">配送时间(例如：2020年1月1日18点)</view>
    <view class="weui-cells weui-cells_after-title">
      <view class="weui-cell weui-cell_input">
        <input bindblur='gettime' class="weui-input" auto-focus placeholder="请填写配送时间"/>
      </view>
    </view>
  </view>

  <view class="page-section">
    <view class="weui-cells__title">联系电话</view>
    <view class="weui-cells weui-cells_after-title">
      <view class="weui-cell weui-cell_input">
        <input bindblur='gettel' class="weui-input" type="number" placeholder="请填写联系电话" />
      </view>
    </view>
  </view>
  
</view>

<view class="tool">
  <view class="sub" bindtap="submit">提交订单</view>
</view>
